<h1>Review de: <%= @restaurant.name %></h1>

<h1>Add a new review</h1>
<div class="container w-25">
  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :content, as: :text, label: false, placeholder: "Enter your review here" %>
    <%= f.input :rating, collection: 0..5, prompt: "Select a rating", label: false %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>
